<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_layout"
        android:padding="20dp"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text = "관심사 AI 예측 결과"
            android:gravity="center"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.skydoves.progressview.ProgressView
                android:id="@+id/one_progressView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="20dp"
                app:progressView_orientation="vertical"
                app:progressView_autoAnimate="true"
                app:progressView_colorBackground="#FFFFF0"
                app:progressView_colorProgress="#30EEFF"
                app:progressView_labelColorInner="#FFFFFF"
                app:progressView_labelColorOuter="#000000"
                app:progressView_labelSize="0sp"
                app:progressView_labelSpace="0dp"
                app:progressView_labelTypeface="bold"
                app:progressView_max="100"
                app:progressView_min="0"
                app:progressView_padding="0dp"
                app:progressView_progress="0"
                app:progressView_progressFromPrevious="true"
                app:progressView_radius="5dp" />

            <com.skydoves.progressview.ProgressView
                android:id="@+id/two_progressView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="20dp"
                app:progressView_orientation="vertical"
                app:progressView_autoAnimate="true"
                app:progressView_colorBackground="#FFFFF0"
                app:progressView_colorProgress="#FFCCCC"
                app:progressView_labelColorInner="#FFFFFF"
                app:progressView_labelColorOuter="#000000"
                app:progressView_labelSize="0sp"
                app:progressView_labelSpace="0dp"
                app:progressView_labelTypeface="bold"
                app:progressView_max="100"
                app:progressView_min="0"
                app:progressView_padding="0dp"
                app:progressView_progress="0"
                app:progressView_progressFromPrevious="true"
                app:progressView_radius="5dp" />

            <com.skydoves.progressview.ProgressView
                android:id="@+id/three_progressView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="20dp"
                app:progressView_orientation="vertical"
                app:progressView_autoAnimate="true"
                app:progressView_colorBackground="#FFFFF0"
                app:progressView_colorProgress="#DDFFDD"
                app:progressView_labelColorInner="#FFFFFF"
                app:progressView_labelColorOuter="#000000"
                app:progressView_labelSize="0sp"
                app:progressView_labelSpace="0dp"
                app:progressView_labelTypeface="bold"
                app:progressView_max="100"
                app:progressView_min="0"
                app:progressView_padding="0dp"
                app:progressView_progress="0"
                app:progressView_progressFromPrevious="true"
                app:progressView_radius="5dp" />

            <com.skydoves.progressview.ProgressView
                android:id="@+id/four_progressView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="20dp"
                app:progressView_orientation="vertical"
                app:progressView_autoAnimate="true"
                app:progressView_colorBackground="#FFFFF0"
                app:progressView_colorProgress="#E0D8F3"
                app:progressView_labelColorInner="#FFFFFF"
                app:progressView_labelColorOuter="#000000"
                app:progressView_labelSize="0sp"
                app:progressView_labelSpace="0dp"
                app:progressView_labelTypeface="bold"
                app:progressView_max="100"
                app:progressView_min="0"
                app:progressView_padding="0dp"
                app:progressView_progress="0"
                app:progressView_progressFromPrevious="true"
                app:progressView_radius="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text= "운동"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text= "독서"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text= "여행"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text= "요리"
                android:gravity="center"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/ok_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="확인"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>
</layout>